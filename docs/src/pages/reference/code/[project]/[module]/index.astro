---
import StarlightPage from "@astrojs/starlight/components/StarlightPage.astro";
import type { CodeModuleSummary } from "../../../../../lib/code-reference";
import { getProjectSummaries } from "../../../../../lib/code-reference";

interface StaticPath {
  params: {
    project: string;
    module: string;
  };
  props: {
    moduleSummary: CodeModuleSummary;
  };
}

export function getStaticPaths(): StaticPath[] {
  return getProjectSummaries().flatMap((projectSummary) =>
    projectSummary.modules.map((moduleSummary) => ({
      params: {
        project: projectSummary.project,
        module: moduleSummary.module,
      },
      props: {
        moduleSummary,
      },
    })),
  );
}

const { moduleSummary } = Astro.props;
const pageTitle = `${moduleSummary.projectTitle} / ${moduleSummary.module}`;
const description = `File-level code reference for ${moduleSummary.project}/${moduleSummary.module}.`;
---

<StarlightPage frontmatter={{ title: pageTitle, description }}>
  <p>
    Project: <a href={`/reference/code/${encodeURIComponent(moduleSummary.project)}/`}><code>{moduleSummary.project}</code></a>
  </p>
  <p>
    Module: <code>{moduleSummary.module}</code>
  </p>

  {
    moduleSummary.files.length > 0 ? (
      <ul class="symbol-list">
        {moduleSummary.files.map((fileDoc) => (
          <li>
            <a
              href={`/reference/code/${encodeURIComponent(fileDoc.project)}/${encodeURIComponent(fileDoc.module)}/${encodeURIComponent(fileDoc.fileSlug)}/`}
            >
              <code>{fileDoc.fileRemainder}</code>
            </a>
            <span class="count">
              {fileDoc.functions.length} fn / {fileDoc.classes.length} types
            </span>
          </li>
        ))}
      </ul>
    ) : (
      <p class="placeholder">No documented files were found for this module.</p>
    )
  }
</StarlightPage>

<style>
  .symbol-list {
    list-style: none;
    padding-left: 0;
    margin: 0;
  }

  .symbol-list li {
    border-top: 1px solid var(--sl-color-hairline);
    padding: 0.7rem 0;
    display: flex;
    justify-content: space-between;
    gap: 1rem;
  }

  .count {
    color: var(--sl-color-text-accent);
    font-family: var(--__sl-font-mono);
    font-size: 0.9rem;
    white-space: nowrap;
  }

  .placeholder {
    font-style: italic;
  }
</style>
